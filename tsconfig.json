{
	"extends": "eslint-config-bamboo",
	"compilerOptions": {
		"target": "es6",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react",
		"baseUrl": "src",
		"sourceMap": true,
		"noEmit": true,
		"incremental": false /* Incremental is inherited as true from eslint-config-bamboo but needs to be false when noEmit is true, which is required for React */
	},
	"include": ["src"]
}
