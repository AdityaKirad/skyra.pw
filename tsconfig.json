{
	"extends": "@favware/ts-config",
	"compileOnSave": false,
	"compilerOptions": {
		"module": "esnext",
		"moduleResolution": "node",
		"target": "ES2018",
		"baseUrl": "src",
		"noEmit": true,
		"isolatedModules": true,
		"jsx": "react",
		"noErrorTruncation": true,
		"allowJs": true,
		"checkJs": false,
		"skipLibCheck": true,
		"incremental": false,
		"resolveJsonModule": true
	},
	"include": ["src", "src/**/*.json"]
}
