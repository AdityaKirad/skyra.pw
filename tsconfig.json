{
	"extends": "@favware/ts-config",
	"compileOnSave": false,
	"compilerOptions": {
		"target": "es6",
		"lib": ["dom", "es2020"],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react",
		"baseUrl": "src",
		"sourceMap": true,
		"noEmit": true,
		/* Incremental is inherited as true from eslint-config-bamboo but needs to be false when noEmit is true, which is required for React */
		"incremental": false
	},
	"include": ["src"]
}
